        		</tr>
        	</thead>
        	<tbody>
        		<% current_user.events.each do |event| %>
        		<tr>
        			<td><%= event.title %></td>
        			<td><%= event.date_from %></td>
        			<td><%= event.date_to %></td>
        			<td><%= event.location %></td>
        			<td><%= event.eventtype %></td>
        			<td><%= event.crm %></td>
        			<td><%= event.tips %></td>
        		</tr>
        		<% end %>
        	</tbody>
        </table>
    </section>
    
</section>
