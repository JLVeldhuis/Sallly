    <section class="row">
        <h3>Events</h3>
        <span>Your upcoming events.</span>
        <table class="table table-striped table-bordered table-condensed">
        	<thead>
        		<tr>
        			<th>Title</th>
        			<th>Date from</th>
        			<th>Date to</th>
        			<th>Location</th>
        			<th>eventtype</th>
        			<th>crm</th>
