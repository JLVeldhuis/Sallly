    <h1>Status</h1>
    <section class="row info">
        <section class="span3 well">
            <h4>Heart rate</h4>
            <canvas id="monitor" width="220" height="50" style="margin-top: 40px;"></canvas>
        </section>
        <section class="span4 well">
