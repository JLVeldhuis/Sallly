<header class="topbar">
	<section class="fill">
		<section class="container">
			<a href="/" class="brand">Forevenue</a>
			<ul class="nav">
				<li><%= link_to "Home", root_url %></li>
			
				<% if signed_in? %>
					<li><%= link_to "Users", users_url %></li>
					<li><%= link_to "Profile", current_user %></li>
					<li><%= link_to "Settings", edit_user_url(current_user) %><li>
				<% end %>
			
				<li><%= link_to "Contact", contact_url %></li>
				<li><%= link_to "About", about_url %></li>
			
				<% if signed_in? %>
					<li><%= link_to "Sign out", signout_url, :method => :delete %></li>
				<% else %>
					<li><%= link_to "Sign in", signin_url %></li>
				<% end %>
			</ul>
		</section>
	</section>
</header>