<h1>Incoming <%=User.get_event_class_name(@event.eventtype)%></h1>
<div class="modal" id="myModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h2><%=get_title(@event.eventtype, @event.source)%></h2>
  </div>
  <%= form_for(@event, :remote => true) do |f| %>
    <div class="modal-body">
      <div class="column datePickers clearfix">
        <div class="input">
          <%= f.text_field :date_from, :id => "from", :class => "span2", :placeholder => "From date" %>
          <%= f.text_field :date_to, :id => "to", :class => "span2", :style => "margin-left: 17px;", :placeholder => "To date" %>
          <%=hidden_field_tag "source", "plan"%>
        </div>
      </div>
      <%=render :partial=>'user_details', :locals => {:event => @event}%>
    </div>
    <div class="modal-footer">
      <%= f.submit "Yes", :class => "btn btn-primary" %>
      <a href="#" class="btn" data-dismiss="modal">No</a>
    </div>
  <%end%>
</div>